{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "strictNullChecks": true,
    "declaration": true,
    "paths": {
      "~/*": ["./*"],
      "~tests/*": ["./tests/*"]
    }
  },

  "exclude": [
    "node_modules"
  ]
}
